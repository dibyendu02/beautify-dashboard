# API Configuration
# This points to the Next.js API routes (not an external backend)
NEXT_PUBLIC_API_URL=http://localhost:3003/api

# App Configuration
NEXT_PUBLIC_APP_NAME=Beautify Merchant Dashboard
NEXT_PUBLIC_APP_VERSION=1.0.0

# Socket URL for real-time features
